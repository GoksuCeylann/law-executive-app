@model HukukTakipYeniProje.Models.Entity.SUBELER

@{
    ViewBag.Title = "YeniAvukat";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    /* Custom button size class */
    .btn-custom-size {
        padding: 8px 16px; /* Adjust the padding to change button size */
        font-size: 14px; /* Adjust the font size to change button size */
    }
</style>

<div class="row">
    <div class="col-md-6">
        <form class="form-group" method="post">
            <!-- Left Side Components -->
            @*<div>
                <label>Avukat ID</label>
                <input type="text" class="form-control" name="AVUKATID" />
            </div>*@
            <div>
                <label>Adı</label>
                <input type="text" class="form-control" name="AVUKATAD" />
            </div>
            <div>
                <label>Soyadı</label>
                <input type="text" class="form-control" name="AVUKATSOYAD" />
            </div>
            <div>
                <label>Kullanıcı Adı</label>
                <input type="text" class="form-control" name="AVUKATKULLANICIADIID" />
            </div>
            <div>
                <label>Cep Tel No</label>
                <input type="text" class="form-control" name="AVUKATCEPTELNO" />
            </div>
            <div>
                <label>İş Tel No</label>
                <input type="text" class="form-control" name="AVUKATISTELNO" />
            </div>
            <div>
                <label>Avans Hesap Şube</label>
                @Html.DropDownListFor(m => m.SUBEAD, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
            </div>
            <div>
                <label>Avans Hesap No</label>
                <input type="text" class="form-control" name="AVUKATAVANSHESAPNO" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <form class="form-group" method="post">
            <!-- Right Side Components -->
            <div>
                <label>Avukat Tipi</label>
                <form method="get">
                    <fieldset name="AVUKATTIPI">
                        <select id="AVUKATTIPI" name="AVUKATTIPI" class="form-control">
                            <option selected="selected" value="Banka Kadrolu Avukatı">Banka Kadrolu Avukatı</option>
                            <option value="Sözleşmeli Büro">Sözleşmeli Büro</option>
                        </select>
                    </fieldset>
                </form>
            </div>
            @*<div>
                <label>Müşteri ID</label>
                <input type="text" class="form-control" name="AVUKATMUSTERIID" />
            </div>*@
            <div>
                <label>Şehir</label>
                <input type="text" class="form-control" name="AVUKATSEHIRID" />
            </div>
            <div>
                <label>İlçe</label>
                <input type="text" class="form-control" name="AVUKATILCEID" />
            </div>
            <div>
                <label>E-mail</label>
                <input type="text" class="form-control" name="AVUKATEMAIL" />
            </div>
            <div>
                <label>Tam Adres</label>
                <input type="text" class="form-control" name="AVUKATTAMADRES" />
            </div>
            <div>
                <label>TCKN</label>
                <input type="text" class="form-control" name="AVUKATTCKN" />
            </div>
            <div class="text-right" style="margin-top:15px">
                <button class="btn btn-info btn-custom-size">Avukat Ekle</button>
            </div>
        </form>
    </div>
</div>
