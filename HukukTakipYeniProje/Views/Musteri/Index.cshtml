@using HukukTakipYeniProje.Models.Entity
@model List<MUSTERILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            @*<th>MÜŞTERİ ID</th>*@
            <th>MÜŞTERİ AD SOYAD</th>
            <th>TCKN</th>
            <th>ŞEHİR</th>
            <th>BORÇLU TÜRÜ</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                @*<td>@mus.MUSTERIID</td>*@
                <td>@mus.MUSTERIAD @mus.MUSTERISOYAD</td>
                <td>@mus.MUSTERITCKN</td>
                <td>@mus.SEHIRLER.SEHIRAD</td>
                <td>@mus.BORCLUTURLERI.BORCLUTURU</td>
                <td><a href="/MUSTERI/SIL/@mus.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@mus.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>