@model HukukTakipYeniProje.ViewModels.UrunGetirViewModel

@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<style>
    /* Custom button size class */
    .btn-custom-size {
        padding: 8px 16px; /* Adjust the padding to change button size */
        font-size: 14px; /* Adjust the font size to change button size */
    }
</style>

@using (Html.BeginForm("Guncelle", "Urun", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            <!-- Left Side Components -->
            <div class="form-group">
                @Html.LabelFor(m => m.URUNID)
                @Html.TextBoxFor(m => m.URUNID, new { @class = "form-control" })
                <br />
                <label>Ürün Borçlu</label>
                @Html.DropDownListFor(model => model.SelectedBorcluId, Model.Borclular, "Borclu Seçiniz", new { @class = "form-control", id = "SelectedBorcluId" })
                <br />
                @Html.LabelFor(m => m.URUNAD)
                @Html.TextBoxFor(m => m.URUNAD, new { @class = "form-control" })
                <br />
                @Html.LabelFor(m => m.URUNTAKIPMIKTAR)
                @Html.TextBoxFor(m => m.URUNTAKIPMIKTAR, new { @class = "form-control" })
            </div>
        </div>
        <div class="col-md-6">
            <!-- Right Side Components -->
            <div class="form-group">
                <label>Ürün Avukat</label>
                @Html.DropDownListFor(model => model.SelectedAvukatId, Model.Avukatlar, "Avukat Seçiniz", new { @class = "form-control", id = "SelectedAvukatId" })
                <br />
                @Html.LabelFor(m => m.URUNTAKIPTARIHI)
                @Html.TextBoxFor(m => m.URUNTAKIPTARIHI, new { @class = "form-control" })
                <br />
                @Html.LabelFor(m => m.URUNTAKIPBIRIMKODU)
                @Html.TextBoxFor(m => m.URUNTAKIPBIRIMKODU, new { @class = "form-control" })
                <br />
                @Html.LabelFor(m => m.URUNTAKIPMUDINO)
                @Html.TextBoxFor(m => m.URUNTAKIPMUDINO, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="text-right" style="margin-top: 15px;">
        <button class="btn btn-success btn-custom-size">Ürün Güncelle</button>
    </div>
}

<script>
    $(document).ready(function () {
        // Get a reference to the dropdown element
        var dropdown = $("#SelectedBorcluId");

        // Attach a click event handler to the dropdown
        dropdown.click(function () {
